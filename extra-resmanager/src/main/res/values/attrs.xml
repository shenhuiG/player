<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RecommendView">
        <attr name="title" format="string" />
        <attr name="label" format="string" />
        <attr name="image" format="reference" />
        <attr name="noLabel" format="boolean" />
    </declare-styleable>
    <declare-styleable name="VstTextClock">
        <attr name="format12Hour" format="string" />
        <attr name="format24Hour" format="string" />
        <attr name="timeZone" format="string" />
    </declare-styleable>
    <declare-styleable name="VstNetStatusView">
        <attr name="maxWifiLevel">
            <enum name="MAX_3" value="3"></enum>
            <enum name="MAX_4" value="4"></enum>
            <enum name="MAX_5" value="5"></enum>
        </attr>
    </declare-styleable>

    <!-- @PageScrollGridView -->
    <declare-styleable name="PageScrollGridView">
        <attr name="numRows" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="Widget">
        <attr name="ratioWidth" format="integer" />
        <attr name="ratioHeight" format="integer" />
        <attr name="ratioLeft" format="integer" />
        <attr name="ratioTop" format="integer" />
        <attr name="ratioX" format="float" />
        <attr name="ratioY" format="float" />
        <attr name="focusScale" format="float" />
        <attr name="focusScaleDuration" format="integer" />
        <attr name="shadowDrawable" format="reference" />
        <attr name="shadowRatioWidth" format="integer" />
        <attr name="shadowRatioHeight" format="integer" />
        <attr name="showBord" format="boolean"/>
    </declare-styleable>
    
    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="mutate_background" format="boolean" />
        <attr name="oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>
    
</resources>